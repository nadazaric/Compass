<Window x:Class="travel_agent.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:travel_agent.Windows"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="400">
    <ScrollViewer
        HorizontalScrollBarVisibility="Auto" 
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="260"
            Margin="20"
            Name="tests">
            <Image 
                Source="{StaticResource Image.Logo}"
                Width="175"
                Height="175"
                Margin="0 0 0 50"/>

            <Label 
                Content="{StaticResource String.EmailLabel}"
                FontSize="14"
                Padding="0"/>
            <TextBox Name="MailTextBox"/>

        </StackPanel>
    </ScrollViewer>
</Window>
