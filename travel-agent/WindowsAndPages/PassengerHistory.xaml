<Page x:Class="travel_agent.WindowsAndPages.PassengerHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:travel_agent.WindowsAndPages"
      mc:Ignorable="d" 
      Title="PassengerHistory">
    <Page.Resources>
        
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Arrangements List -->
            <Grid x:Name="ArrangementsListView">
                <ItemsControl
					x:Name="ArrangementsItemsCotrol"
					Margin="0 10 0 20"
					ItemsSource="{Binding Arrangements}">
                    <!--ItemTemplateSelector="{StaticResource FirstItemTemplateSelector}">-->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
